<div class="row">
  <div class="col-md-4 .col-sm-4 .col-xs-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= image_tag @stock.stck_img, class: "img-responsive img-thumbnail show-img" %><br>
      </div>
      <div class="panel-footer">
        <h3><%= "#{ @stock.name }" %></h3>
        <p>Quantity: <span class="badge"><%= "#{ @stock.quantity }" %></span></p>
        <p>Store: <%= "#{ @stock.store.name }, #{ @stock.user.location.state }" %></p>
        <p>Category: <%= "#{ @stock.category.name }" %></p>
        <p>Subcategory: <%= "#{ @subcategory.name }" %></p>
        <p>Purchase for: $<%= "#{ @stock.sell_price }" %></p>
        <hr>
        <p>Stocked by: <%= "#{ @stock.user.username } about #{time_ago_in_words( @stock.created_at ) } ago" %>
        <%= link_to like_stock_path( @stock ), method: :put, class: "btn btn-default pull-right" do %>
          <span class="glyphicon glyphicon-heart"></span>
          <%= @stock.get_upvotes.size %>
        <% end %>
      </p>
      </div>
    </div>
    <% if current_user %>
      <%= link_to 'Back', stocks_path, class: "btn btn-primary"  %>
      <%= link_to "Edit", edit_stock_path( @stock ), class: "btn btn-warning" %></td>
      <%= link_to "Destroy", stock_path( @stock ), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?"} %></td>
    <% else %>
      <%= link_to 'Back', stocks_path, class: "btn btn-primary"  %>
    <% end %>
  </div>
</div>