<%= form_for @stock do | f | %>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :stck_img, class: "help-block" %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.number_field :quantity, placeholder: "Quantity", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :buy_price %>
    <%= f.number_field :buy_price, placeholder: "Buy Price", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :sell_price %>
    <%= f.number_field :sell_price, placeholder: "Sell Price", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :store %>
    <%= f.collection_select :store_id, Store.order( :name ), :id, :name, { prompt: "Choose a store" }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.order( :name ), :id, :name, { prompt: "Choose a category" }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :subcategory %>
    <%= f.grouped_collection_select :subcategory_id, Category.order( :name ), :subcategories, :name, :id, :name, { prompt: "Choose a subcategory" }, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>

<% end %>