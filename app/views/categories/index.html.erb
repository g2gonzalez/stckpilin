<div class="jumbotron dashboard">
  <h1>Categories</h1>
</div>

<div class="table-responsive">
  <table id="categories" class="table table-hover">
    <thead>
    <tr>
      <th>Category</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= "#{ category.name }" %></td>
        <td><%= link_to "Edit", edit_category_path( category ), class: "btn btn-xs btn-warning" %></td>
        <td><%= link_to "Destroy", category_path( category ), method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<hr>
<%= link_to "Add Category", new_category_path, class: "btn btn-default" %>
<%= link_to "Back", stocks_path, class: "btn btn-primary" %>